<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.spring.homeshare.MemberMapper">
	
	<!-- 회원가입 sql -->
	<insert id="insert" parameterType="memberVO">
		insert into member
		values(0,#{memId},#{password},null,null,#{memName},#{email})
	</insert>
	
	<!-- 로그인 Sql -->
	<select id="login" resultType="MemberVO">
		select * from ${member}
		where ${memId} = #{memId} and
		${password} = #{password}
	</select>



	<!-- 로그아웃 -->
	<select id="">
	</select>
	<!-- 아이디 찾기 찾기 sql -->
	<select id="findId" resultType="String">
		select ${memId} from
		${member}
		where ${memName} = #{memName} and
		${email} = #{email}
	</select>

	<!-- 정보가져오기 (내정보수정시 사용) -->
	<select id="select" resultType="memberVO">
		select * from ${member} where ${memId}=#{memId}
	</select>

</mapper>










