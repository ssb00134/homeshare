<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.spring.homeshare.MemberMapper">

	<!-- 회원가입 sql -->
	<insert id="insert" parameterType="memberVO">
		insert into member
		values(0,#{memId},#{password},0,null,#{memName},#{email},#{gender})
	</insert>

	<!-- 로그인 Sql -->
	<select id="login" resultType="MemberVO">
		select * from ${member}
		where
		${memId} = #{memId} and
		${password} = #{password}
	</select>
	
	<!-- 정보수정 -->
	<update id="update" >
	update ${member} set
		${memId} =#{memId},
		${password} =#{password},
		${houseCount}=#{houseCount},
		${account}=#{account},
		${memName}=#{memName},
		${email}=#{email},
		${gender}=#{gender}
		where ${memNo} = #{memNo}
	
	</update>



	<!-- 로그아웃 -->
	<select id="">
	</select>
	<!-- 아이디 찾기 찾기 sql -->
	<select id="findId" resultType="String">
		select ${memId} from
		${member}
		where ${memName} = #{memName} and
		${email} = #{email}
	</select>

	<!-- 정보가져오기 (내정보수정시 사용) -->
	<select id="select" resultType="memberVO">
		select * from ${member} where
		${memId}=#{memId}
	</select>

	<!-- 회원정보조회 -->
	<select id="select_all_member_orderby"
		parameterType="java.util.HashMap"
		resultType="memberVO">

		select
		*
		from (
		select rownum rn,
		a.*
		from (
		select * from member
		<trim prefix="ORDER BY">
			<if test="orderby == 'memId'"> memId </if>
			<if test="orderby == 'memName'"> memName </if>
			<if test="orderby == 'email'"> email </if>

		</trim> desc
		) a
		) b
		where rn
		between #{start} and #{end}

	</select>
	
	<select id="total_count" resultType="Integer">
		select count(*) total_cnt
		from ${member}
	</select>
</mapper>










